@{
    ViewData["Title"] = "Home Page";
}

@model BooksListViewModel

    <h1>OnlineBookStore</h1>

    @foreach (Book b in Model.Books)
    {
        <h3>@b.Title</h3>
        <ul>
            <li>Title: @b.Title</li>
            <li>Author: @b.Author</li>
            <li>Publisher: @b.Publisher</li>
            <li>ISBN: @b.ISBN</li>
            <li>Category: @b.Category</li>
            <li>Number of Pages: @b.PageCount</li>
            <li>Price: @b.Price</li>
        </ul>
    }

<div page-model="@Model.PaginationInfo" page-action="Index"></div>
